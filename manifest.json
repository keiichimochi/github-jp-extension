{
  "manifest_version": 3,
  "name": "ウェブページ日本語説明ツール",
  "version": "1.0.0",
  "description": "ウェブページの内容を日本語で解説します",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "management"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "src/background.js"
  }
}