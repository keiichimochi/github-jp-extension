{
  "manifest_version": 3,
  "name": "GitHub日本語説明ツール",
  "version": "1.0.0",
  "description": "GitHubのリポジトリの内容を日本語で解説します",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/content.js"]
    }
  ]
}